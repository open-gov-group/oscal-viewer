{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/lib",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/lib/**/*.ts", "src/types/**/*.ts", "src/parser/**/*.ts"],
  "exclude": ["tests/**/*"]
}
